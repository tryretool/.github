<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Scoping_Start_Date</fullName>
    <active>true</active>
    <errorConditionFormula>Evaluation_Start_Date__c &lt; Scoping_Start_Date__c &amp;&amp; NOT(ISCHANGED(Permission_Check__c))</errorConditionFormula>
