<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>treatment_without_experiment</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(Experiment_Name__c) &amp;&amp; NOT(ISPICKVAL(Experiment_Treatment__c,&quot;&quot;))</errorConditionFormula>
    <errorDisplayField>Experiment_Name__c</errorDisplayField>
    <errorMessage>Cannot set treatment without a defined experiment</errorMessage>
</ValidationRule>
