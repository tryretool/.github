<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Start_Date_First_of_month</fullName>
    <active>true</active>
    <errorConditionFormula>DAY(Start_Date__c) != 1</errorConditionFormula>
    <errorDisplayField>Start_Date__c</errorDisplayField>
    <errorMessage>Start date must be on the first of a month</errorMessage>
</ValidationRule>
