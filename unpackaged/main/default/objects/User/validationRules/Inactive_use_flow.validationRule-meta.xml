<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Inactive_use_flow</fullName>
    <active>true</active>
    <errorConditionFormula>IsActive = FALSE &amp;&amp;
ISCHANGED(IsActive) &amp;&amp;
