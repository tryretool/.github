<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Email_or_Contact</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK(  Contact__c ) , ISBLANK( Email_From_Polytomic__c )
)</errorConditionFormula>
    <errorMessage>Contact roles require one of Email or Contact to be populated</errorMessage>
</ValidationRule>
