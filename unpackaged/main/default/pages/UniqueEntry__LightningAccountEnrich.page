 function formatNumber(num){
       var result;
      try{
        if(num != null){
           var strNum = num.toString();
                if(strNum.length <=3){
                    return strNum;
                }
                result = strNum.charAt(strNum.length-1);
                count = 1;
                for(var i=strNum.length-2; i>=0; i--){
                    if(count == 3){
                        result = strNum.charAt(i)+',' + result;
                        count = 1;
                    }else{
                        result = strNum.charAt(i) + '' + result;
                        count++;
                    }
                }
        }
          
        return result;
      }
      catch(e){
        console.log(e);
        return null;
      }
    

