    <decisions>
        <name>Can_change</name>
        <label>Can change?</label>
        <locationX>212</locationX>
        <locationY>347</locationY>
        <defaultConnector>
            <targetReference>Error</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_can_change</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>recordId.Sales_Qualified_Opportunity__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Change_Sourced_By</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description>Added validation for reason to be &lt; 255 chars</description>
    <environments>Default</environments>
    <formulas>
        <name>can_change_sourced</name>
        <dataType>Boolean</dataType>
        <expression>IF(
 NOT({!recordId.Sales_Qualified_Opportunity__c}) || 
 {!recordId.Sales_Qualified_At_Month__c} = DATE(YEAR({!$Flow.CurrentDate}),MONTH({!$Flow.CurrentDate}),1) ||
 ({!recordId.Sales_Qualified_At_Month__c} = DATE(YEAR({!$Flow.CurrentDate}),MONTH({!$Flow.CurrentDate})-1,1) &amp;&amp; DAY({!$Flow.CurrentDate}) &lt;= 5),
 TRUE,
 FALSE
)</expression>
    </formulas>
    <formulas>
        <name>full_reason</name>
        <dataType>String</dataType>
        <expression>{!Please_enter_a_reason_why_you_are_changing_the_Sourced_By_value}&amp;&quot; (&quot;&amp;LEFT({!$User.FirstName}&amp;&quot; &quot;&amp;{!$User.LastName},35)&amp;&quot;)&quot;</expression>
    </formulas>
    <interviewLabel>Opportunity - Change Source {!$Flow.CurrentDateTime}</interviewLabel>
