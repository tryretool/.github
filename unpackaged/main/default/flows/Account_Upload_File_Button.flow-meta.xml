            <isRequired>false</isRequired>
        </fields>
        <fields>
            <name>display_other</name>
            <fieldText>&lt;p&gt;If &lt;strong&gt;Other&lt;/strong&gt; please specify&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
            <visibilityRule>
                <conditionLogic>and</conditionLogic>
                <conditions>
                    <leftValueReference>file_type</leftValueReference>
                    <operator>EqualTo</operator>
                    <rightValue>
                        <elementReference>Other</elementReference>
                    </rightValue>
                </conditions>
            </visibilityRule>
        </fields>
        <fields>
            <name>other_details</name>
            <dataType>String</dataType>
            <fieldType>InputField</fieldType>
            <inputsOnNextNavToAssocScrn>UseStoredValues</inputsOnNextNavToAssocScrn>
            <isRequired>false</isRequired>
            <validationRule>
                <errorMessage>&lt;p&gt;Cannot be more than 20 characters&lt;/p&gt;</errorMessage>
